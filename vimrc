set number
syntax on
set cursorline
set laststatus=2
set ruler
set statusline=%f
set statusline+=%m
set statusline+=%r
set statusline+=%=%y\ %P
set mouse=a
set autoindent

highlight LineNr ctermfg=Blue

highlight CursorLine cterm=bold ctermbg=Black "ctermbg=235
highlight CursorLineNr cterm=bold ctermbg=Black ctermfg=Yellow
